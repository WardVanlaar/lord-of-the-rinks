<section>
  <h3>Create New Post</h3>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
      <div>
        <label id="skates_type">Select the type of skates you used</label>
        <button id="figure" class="skates" onclick="figureSkatesHandler()">Figure Skates</button>
        <button id="hockey" onclick="hockeySkatesHandler()">Hockey Skates</button>
        <button id="racing" onclick="racingSkatesHandler()">Racing Skates</button>
        <button id="touring" onclick="touringSkatesHandler()">Touring Skates</button>
      </div>

    </div>
    <div>
      <label for="post-text">Description</label>
      <textarea type="text" id="post-text" name="post-text"></textarea>
      {{! <input type="text" id="post-text" name="post-text" /> }}
    </div>
    <button id="createPost" type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
  <section>
    <h3>Your Posts</h3>
    <ol>
      {{#each posts as |post|}}
        <li>
          {{!-- {{> post-info post}} --}}
          <article class="post">
            <div class="title">
              <h3>{{title}}</h3>
              <p id="mySkates"></p>
              <h5>(Posted by
                {{user.username}}
                on
                {{format_date created_at}})</h5>
            </div>
            <div>
              <p>{{post_text}}</p>
            </div>
            <div class="meta">
               {{post.vote_count}} {{format_plural "point" post.vote_count}}
              <a href="/post/{{id}}">{{comments.length}}
                {{format_plural "comment" comments.length}}</a>
              <a href="/dashboard/edit/{{post.id}}" class="edit-link"><button
                >Edit</button></a>
            </div>
          </article>
        </li>
      {{/each}}
    </ol>
  </section>
{{/if}}

<script src="/javascript/add-post.js"></script>